<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.BerandaFragment">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center"
        android:elevation="0dp"
        android:id="@+id/app_bar_id"
        android:background="@drawable/back_saldo">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo"
                android:textSize="16sp"
                android:textColor="#FFD700" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. "
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#FFD700">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pemesanan minggu ini"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/week_rentals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24 pemesanan"
                android:gravity="center"
                android:paddingTop="8dp"
                android:textSize="12sp"
                android:paddingBottom="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#FF8C00">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:text="Pemesanan bulan ini"
                android:gravity="center"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/month_rentals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 pemesanan"
                android:paddingTop="8dp"
                android:textSize="12sp"
                android:paddingBottom="12dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/venue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/venue_btn"
            android:maxHeight="55dp"
            android:maxWidth="88dp"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:id="@+id/field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="55dp"
            android:adjustViewBounds="true"
            android:maxWidth="88dp"
            android:src="@drawable/field_btn"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:id="@+id/jadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/jadwal_btn"
            android:maxHeight="55dp"
            android:adjustViewBounds="true"
            android:maxWidth="88dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</LinearLayout>