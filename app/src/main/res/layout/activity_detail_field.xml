<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFieldActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/background">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <!--<android.support.v4.view.ViewPager-->
                    <!--android:id="@+id/viewpager"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="200dp">-->
                <!--</android.support.v4.view.ViewPager>-->
                <ImageView
                    android:id="@+id/image_view_detail_lapang"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@mipmap/ic_launcher">
                </ImageView>
                <LinearLayout
                    android:id="@+id/dots_layout"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="8dp"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="horizontal">
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga sewa"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_color"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mulai dari"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Rp. "
                    android:layout_marginLeft="8dp"
                    android:textSize="12sp"
                    android:gravity="top"
                    android:textColor="@color/text_white"/>
                <TextView
                    android:id="@+id/detail_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200.000"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / jam"
                    android:textColor="@color/text_white"
                    android:textSize="16sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Lantai"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp" />
            <TextView
                android:id="@+id/jenis_lantai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rumput sintesis"
                android:layout_marginLeft="16dp"
                android:textColor="@color/text_white"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Lapangan"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp" />
            <TextView
                android:id="@+id/jenis_lapangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mini Soccer"
                android:layout_marginLeft="16dp"
                android:textColor="@color/text_white"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ukuran Lapangan"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp" />
            <TextView
                android:id="@+id/et_size_field_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 x 25 meter"
                android:textColor="@color/text_white"
                android:layout_marginLeft="16dp"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List Tarif"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/et_start_day_field_tarif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senin "
                    android:textColor="@color/text_white"
                    android:layout_marginLeft="16dp"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    android:textColor="@color/text_white"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/et_end_day_field_tarif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Minggu"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/et_start_hour_field_tarif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07.00 "
                    android:textColor="@color/text_white"
                    android:layout_marginLeft="16dp"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"/>
                <TextView
                    android:id="@+id/et_end_hour_field_tarif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15.00"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"/>
                <TextView
                    android:id="@+id/et_cost_field_tarif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150.000"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp" />
            <TextView
                android:id="@+id/descr_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi Lapangan"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text_white"
                android:layout_marginBottom="16dp"/>
            <Button
                android:id="@+id/edit_tarif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"
                android:text="Edit Tarif"
                android:backgroundTint="@color/text_color"
                android:textStyle="bold"
                tools:targetApi="lollipop" />
            <Button
                android:id="@+id/sewa_lapangan_bayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"
                android:text="Atur Jadwal"
                android:backgroundTint="@color/text_color"
                android:textStyle="bold"
                tools:targetApi="lollipop" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>