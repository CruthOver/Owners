<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hari"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <Spinner
                    android:id="@+id/spinner_start_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/text_color"
                    android:spinnerMode="dropdown"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="hingga"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <Spinner
                    android:id="@+id/spinner_end_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/text_color"
                    android:spinnerMode="dropdown"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Waktu"
            android:textColor="@color/text_color"
            android:textSize="12sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <Spinner
                    android:id="@+id/spinner_start_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/text_color"
                    android:spinnerMode="dropdown"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="hingga"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <Spinner
                    android:id="@+id/spinner_end_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/text_color"
                    android:spinnerMode="dropdown"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tarif"
            android:textSize="12sp"
            android:textColor="@color/text_color"
            android:layout_marginTop="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Rp."
                android:gravity="center"
                android:textColor="@color/text_white"
                android:layout_marginRight="4dp"/>
            <EditText
                android:id="@+id/et_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="180.000"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:text="/jam"
                android:textColor="@color/text_color" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/addTarif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMBAH TARIF"
        android:textSize="16sp"
        android:textColor="@color/text_button"
        android:padding="8dp"
        android:textStyle="bold"
        android:backgroundTint="@color/text_color"
        android:layout_marginBottom="16dp"/>
    <RelativeLayout
        android:id="@+id/tarif_RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/list_tariff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
        <TextView
            android:id="@+id/empty_tarif_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum Ada Tarif Terdaftar"
            android:layout_marginTop="16dp"
            android:textColor="@color/text_color"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>