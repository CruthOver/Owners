<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".AddVenueActivity">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/venue_biru"
                android:adjustViewBounds="true"
                android:maxWidth="124dp"
                android:layout_gravity="center"
                android:maxHeight="128dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama venue"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_color"
                android:textSize="12sp" />
            <EditText
                android:id="@+id/venue_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:textSize="14sp"
                android:maxLines="1"
                android:hint="Nama Venue"
                android:textColor="@color/text_white"
                android:textColorHint="@color/text_white"
                android:paddingTop="4dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_color"
                android:textSize="12sp" />
            <EditText
                android:id="@+id/venue_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textSize="14sp"
                android:hint="Deskripsi Venue"
                android:textColor="@color/text_white"
                android:textColorHint="@color/text_white"
                android:paddingTop="4dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jam operasional"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/text_color"
                        android:textSize="12sp" />

                    <Spinner
                        android:id="@+id/et_from_hour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/text_color"
                        android:spinnerMode="dropdown"
                        android:padding="4dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/white"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hingga"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/text_color"
                        android:textSize="12sp" />
                    <Spinner
                        android:id="@+id/et_until_hour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/text_color"
                        android:spinnerMode="dropdown"
                        android:padding="4dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/white"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/add_opsi_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <EditText
                    android:id="@+id/other_opsi_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:hint="Deskripsi Venue"
                    android:textColor="@color/text_white"
                    android:textColorHint="@color/text_white"
                    android:paddingTop="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto utama"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_color"
                android:layout_marginBottom="8dp"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/add_photo_venue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    android:hint="Choose File"
                    android:textColorHint="@color/text_color"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"/>
                <ImageView
                    android:id="@+id/img_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_folder_black_24dp"
                    android:tint="@color/text_color"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view_image"
                android:visibility="gone"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fasilitas"
                android:textColor="@color/text_color"
                android:textSize="12sp"/>
            <LinearLayout
                android:id="@+id/checkbox_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:orientation="vertical">-->
                    <!--<CheckBox-->
                        <!--android:id="@+id/checkbox_facilities_venue"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="Futsal"-->
                        <!--android:buttonTint="@color/text_white"-->
                        <!--android:textSize="14sp"-->
                        <!--android:textColor="@android:color/white" />-->
                <!--</LinearLayout>-->
                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:orientation="vertical">-->
                    <!--<CheckBox-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="WC"-->
                        <!--android:buttonTint="@color/text_white"-->
                        <!--android:textSize="14sp"-->
                        <!--android:textColor="@android:color/white" />-->
                <!--</LinearLayout>-->
            </LinearLayout>
            <LinearLayout
                android:id="@+id/add_opsi_facilities_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <EditText
                    android:id="@+id/other_opsi_facilites_venue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:hint="Deskripsi Venue"
                    android:textColor="@color/text_white"
                    android:textColorHint="@color/text_white"
                    android:paddingTop="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Areas"
                android:textColor="@color/text_color"
                android:textSize="12sp"/>
            <LinearLayout
                android:id="@+id/checkbox_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:orientation="vertical">-->
                <!--<CheckBox-->
                <!--android:id="@+id/checkbox_facilities_venue"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Futsal"-->
                <!--android:buttonTint="@color/text_white"-->
                <!--android:textSize="14sp"-->
                <!--android:textColor="@android:color/white" />-->
                <!--</LinearLayout>-->
                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:orientation="vertical">-->
                <!--<CheckBox-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="WC"-->
                <!--android:buttonTint="@color/text_white"-->
                <!--android:textSize="14sp"-->
                <!--android:textColor="@android:color/white" />-->
                <!--</LinearLayout>-->
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="36dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="12sp"
                android:textColor="@color/text_color"/>
            <AutoCompleteTextView
                android:id="@+id/autoComplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Address, City or Zip Code"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:imeOptions="actionSearch"/>
            <Button
                android:id="@+id/placePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lokasi dari Peta"
                android:textSize="16sp"
                android:textColor="@color/text_button"
                android:padding="8dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tandai peta"
                android:textColor="@color/text_color"
                android:layout_marginBottom="12dp"/>
            <fragment
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                map:mapType="normal"
                class="com.wiradipa.fieldOwners.Fragment.WorkArroundMapFragment"
                android:layout_marginBottom="24dp" />
            <Button
                android:id="@+id/add_new_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIMPAN"
                android:textSize="16sp"
                android:textColor="@color/text_button"
                android:padding="8dp"
                android:textStyle="bold"
                android:backgroundTint="@color/text_color"
                android:layout_marginBottom="16dp"/>
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batal"
                android:textSize="16sp"
                android:textColor="@color/text_white"
                android:padding="8dp"
                android:textStyle="bold"
                android:background="@color/background"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>